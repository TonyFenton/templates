{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div class="not-frame-block-left">
    {{ form_widget(form) }}
</div>
<div>
    <input class="btn btn-success btn-form-1-of-2" type="submit" value="{{ 'button.save'|trans }}"/>
    <a class="btn btn-danger btn-form-2-of-2"
       href="{{ path('fos_user_profile_show') }}">{{ 'button.cancel'|trans }}</a>
</div>
{{ form_end(form) }}

{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="not-frame-block-left">
    {{ form_widget(form) }}
</div>
<div>
    <button class="btn btn-success icon-floppy btn-form-1-of-2" type="submit" role="button">Save</button>
    <a class="btn btn-primary btn-form-2-of-2 icon-reply"
       href="{{ path( 'fos_user_profile_show') }}">Back to the profile</a>
</div>
{{ form_end(form) }}

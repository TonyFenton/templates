{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/user_layout.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <button id="side-menu-btn" type="button" class="d-lg-none navbar-toggler">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="{{ path('homepage') }}">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('folder_index') }}">Folders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('template_index') }}">Templates</a>
                    </li>
                {% endif %}
            </ul>
            <div class="btn-group" role="group" aria-label="user">
                {% if is_granted("ROLE_USER") %}
                <a class="btn btn-light"
                   href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a>
                <a class="btn btn-secondary"
                   href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                {% else %}
                <a class="btn btn-success"
                   href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                <a class="btn btn-secondary"
                   href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </div>
        </div>

    </nav>
    <div id="main-block" class="container">
        <div class="row">
            {% if is_granted('ROLE_USER') %}
                <div id="side-menu-block" class="d-none d-lg-block col-lg-3">
                    {{ render(controller('App\\Controller\\UserController::sideMenu')) }}
                </div>
                {% set contentClass = 'col-md-12 col-lg-9' %}
            {% else %}
                {% set contentClass = 'col-12' %}
            {% endif %}
            <div id="content-block" class="{{ contentClass }}">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/user_layout.js') }}"></script>
{% endblock %}

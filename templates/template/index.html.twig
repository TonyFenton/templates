{% extends 'user/layout.html.twig' %}

{% block title %}Templates{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/template_index.css') }}">
{% endblock %}

{% block content %}

    {% include "_flash_messages.html.twig" %}

    <div class="row">
        <div class="col-10">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Templates</li>
                </ol>
            </nav>
        </div>
        <div class="col-2">
            <a class="btn btn-success" role="button" href="{{ path('template_new') }}">Create new</a>
        </div>
    </div>

    <table id="templates" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th width="50">Name</th>
            <th width="35">Folder</th>
            <th width="15">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td width="50">{{ template.name }}</td>
                <td width="35">{{ template.folder.name }}</td>
                <td width="15">
                    <div class="row">
                        <div class="col-4 text-center">
                            <a class="btn btn-primary" role="button" href="{{ path('template_show', {'id': template.id}) }}">show</a>
                        </div>
                        <div class="col-4 text-center">
                            <a class="btn btn-primary" role="button" href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
                        </div>
                        <div class="col-4 text-center">
                            {{ include('template/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/template_index.js') }}"></script>
{% endblock %}

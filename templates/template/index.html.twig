{% extends 'layout.html.twig' %}

{% block title %}Templates{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/template_index.css') }}">
{% endblock %}

{% block content %}

    {% include "_flash_messages.html.twig" %}

    <div class="row">
        <div class="col-10">
            {% include "_breadcrumb.html.twig" with {items: [
                {name: "Templates"}
            ]} %}
        </div>
        <div class="col-2 text-center">
            <a title="Add a new template" class="btn btn-success icon-plus-squared breadcrumb-btn" role="link" href="{{ path('template_new') }}"></a>
        </div>
    </div>

    <input type="hidden" name="datatables_length" id="datatables-length" value="{{ app.request.cookies.get('datatables_length')|default(25) }}"/>
    <table id="templates" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Folder</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td class="align-middle"><a title="Open the template" href="{{ path('template_show', {'id': template.id}) }}">{{ template.name|cut(40) }}</a></td>
                <td class="align-middle"><a title="Open the folder" href="{{ path('folder_content', {'id': template.folder.id}) }}">{{ template.folder.name|cut(40) }}</a></td>
                <td>
                    <div class="row">
                        <div class="col-6 text-center">
                            <a title="Open the template" class="btn btn-success icon-doc-inv" role="link" href="{{ path('template_show', {'id': template.id}) }}"></a>
                        </div>
                        <div class="col-6 text-center">
                            <a title="Edit the template" class="btn btn-primary icon-cog-alt" role="link" href="{{ path('template_edit', {'id': template.id}) }}"></a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/template_index.js') }}"></script>
{% endblock %}

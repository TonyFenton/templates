{% extends 'template/layout.html.twig' %}

{% block title %}Template{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/template_new.css') }}">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            <div id="template" class="jumbotron">
                <div id="text-control">
                    <div id="variables-wrapper">
                        {# text variable prototype #}
                        <div id="text-variable-prototype" data-variable="{}">
                            <button type="button" class="btn btn-outline-secondary remove-btn">Remove</button>
                            <label for="variable-control-1"></label><span>: </span>
                            <textarea class="form-control text-variable-control" readonly="readonly"></textarea>
                            <button type="button" class="btn btn-outline-secondary edit-btn" data-toggle="modal" data-target="#variable-modal">Edit</button>
                        </div>
                    </div>
                    <button id="add-variable-btn" type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#variable-modal">Add</button>
                </div>
                {{ form_row(form.text) }}
                <div id="action-panel">
                    <input type="submit" value="Save" class="copy-btn btn btn-outline-success"/>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="variable-modal" tabindex="-1" role="dialog" aria-labelledby="variable-modal-label"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="variable-modal-label"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <label for="variable-name">Name: </label>
                        <input id="variable-name" type="text" class="form-control"/>
                    </div>
                    <div>
                        <label for="variable-value">Value: </label>
                        <textarea id="variable-value" class="form-control"></textarea>
                    </div>
                    <input id="variable-id" type="hidden" class="form-control"/>
                </div>
                <div class="modal-footer">
                    <button id="save-variable" type="button" class="btn btn-outline-success" data-dismiss="modal">Save</button>
                    <button id="create-variable" type="button" class="btn btn-outline-success" data-dismiss="modal">Create</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/template_new.js') }}"></script>
{% endblock %}

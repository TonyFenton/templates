{% extends 'template/layout.html.twig' %}

{% block title %}Template{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/template_new_edit.css') }}">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            <div id="template">
                <div id="text-control">
                    <div id="variables-wrapper">
                        {# text variable prototype #}
                        <div class="form-group row" id="text-variable-prototype" data-variable="{}">
                            <label class="col-form-label col-sm-2 form-control-label" for=""></label>
                            <div class="col-sm-8">
                                <textarea class="form-control text-variable-control" readonly="readonly"></textarea>
                            </div>
                            <div class="col-sm-2">
                                <button type="button" class="btn btn-secondary edit-btn" data-toggle="modal"
                                        data-target="#variable-modal">Edit
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="add-variable" type="button" class="btn btn-info" data-toggle="modal" data-target="#variable-modal">Add</button>
                {{ form_row(form.text) }}
                <div id="action-panel">
                    <input type="submit" value="Save" class="copy-btn btn btn-success"/>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="variable-modal" tabindex="-1" role="dialog" aria-labelledby="variable-modal-label"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="variable-modal-label"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 form-control-label" for="variable-name">Name</label>
                        <div class="col-sm-10">
                            <div id="variable-name-left-bracket">{</div>
                            <input id="variable-name" type="text" class="form-control"/>
                            <div id="variable-name-right-bracket">}</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 form-control-label" for="variable-value">Value</label>
                        <div class="col-sm-10"><textarea id="variable-value" class="form-control"></textarea></div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 form-control-label" for="variable-desc">Description</label>
                        <div class="col-sm-10"><textarea id="variable-desc" class="form-control"></textarea></div>
                    </div>
                    <input id="variable-id" type="hidden" class="form-control"/>
                </div>
                <div class="modal-footer">
                    <button id="remove-variable" type="button" class="btn btn-danger" data-dismiss="modal">Remove</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="save-variable" type="button" class="btn btn-success" data-dismiss="modal">Save</button>
                    <button id="create-variable" type="button" class="btn btn-success" data-dismiss="modal">Create</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/template_new_edit.js') }}"></script>
{% endblock %}

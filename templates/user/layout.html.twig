{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/user_layout.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <button id="side-menu-btn" type="button" class="d-lg-none navbar-toggler">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('folder_index') }}">Folders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('template_index') }}">Templates</a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="main-block" class="container-fluid">
        <div class="row">
            <div id="side-menu-block" class="d-none d-lg-block col-lg-3">
                {{ render(controller('App\\Controller\\UserController::sideMenu')) }}
            </div>
            <div id="content-block" class="col-md-12 col-lg-9 col-xl-8">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
    <footer class="bg-info">
        <div class="container">
        </div>
    </footer>
{% endblock %}

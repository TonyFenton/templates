{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/user_layout.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('folder_index') }}">Folders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('template_index') }}">Templates</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3">
                {{ render(controller('App\\Controller\\UserController::sideMenu')) }}
            </div>
            <div class="col-sm-8">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

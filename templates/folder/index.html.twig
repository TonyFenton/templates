{% extends 'user/layout.html.twig' %}

{% block title %}Folders{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/folder_index.css') }}">
{% endblock %}

{% block content %}

    {% include "_flash_messages.html.twig" %}

    <div class="row">
        <div class="col-10">
            <h3>Folders</h3>
        </div>
        <div class="col-2">
            <a class="btn btn-success" role="button" href="{{ path('folder_new') }}">Create new</a>
        </div>
    </div>

    <br/>

    <table id="folders" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th width="75">Name</th>
                <th width="15">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for folder in folders %}
            <tr>
                <td class="align-middle" width="75">{{ folder.name }}</td>
                <td width="15">
                    <div class="row">
                        <div class="col-3 text-center">
                            <a class="btn btn-success" role="button" href="{{ path('folder_content', {'id': folder.id}) }}">Content</a>
                        </div>
                        <div class="col-3 text-center">
                            <a class="btn btn-success" role="button" href="{{ path('template_new_folder', {'id': folder.id}) }}">Add a template</a>
                        </div>
                        <div class="col-3 text-center">
                            <a class="btn btn-primary" role="button" href="{{ path('folder_edit', {'id': folder.id}) }}">Edit</a>
                        </div>
                        <div class="col-3 text-center">
                            {{ include('folder/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/folder_index.js') }}"></script>
{% endblock %}
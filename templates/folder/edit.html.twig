{% extends 'layout.html.twig' %}

{% block title %}Edit folder{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10">
            {% include "_breadcrumb.html.twig" with {items: [
                {href: path('folder_index'), name: "Folders" },
                {href: path('folder_content', {'id': folder.id}), name: folder.name },
                {name: "Edit"}
            ]} %}

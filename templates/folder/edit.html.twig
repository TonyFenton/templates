        <div class="col-sm-2 text-center">
            <div class="breadcrumb-btn">
                {{ include('folder/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    {{ include('folder/_form.html.twig', {'button_label': 'Update'}) }}
{% endblock %}
{% extends 'user/layout.html.twig' %}

{% block title %}{{ folder.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/folder_content.css') }}">
{% endblock %}

{% block content %}

    {% include "_flash_messages.html.twig" %}

    <div class="row">
        <div class="col-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('folder_index') }}">Folders</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ folder.name }}</li>
                </ol>
            </nav>
        </div>
        <div class="col-3 text-center">
            <a title="Add a new template in the folder" class="btn btn-success icon-plus-squared breadcrumb-btn" role="button" href="{{ path('template_new_folder', {'id': folder.id}) }}"></a>
            <a title="Edit the folder" class="btn btn-primary icon-cog-alt breadcrumb-btn" role="button" href="{{ path('folder_edit', {'id': folder.id}) }}"></a>
        </div>
    </div>

    <input type="hidden" name="datatables_length" id="datatables-length" value="{{ app.request.cookies.get('datatables_length')|default(25) }}"/>
    <table id="templates" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th width="75">Name</th>
                <th width="15">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in folder.templates %}
            <tr>
                <td class="align-middle" width="50">{{ template.name }}</td>
                <td width="15">
                    <div class="row">
                        <div class="col-4 text-center">
                            <a title="Open the template" class="btn btn-success icon-doc-inv" role="button" href="{{ path('template_show', {'id': template.id}) }}"></a>
                        </div>
                        <div class="col-4 text-center">
                            <a title="Edit the template" class="btn btn-primary icon-cog-alt" role="button" href="{{ path('template_edit', {'id': template.id}) }}"></a>
                        </div>
                        <div class="col-4 text-center">
                            {{ include('template/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/folder_content.js') }}"></script>
{% endblock %}
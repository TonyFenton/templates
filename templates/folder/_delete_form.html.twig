<form method="post" action="{{ path('folder_delete', {'id': folder.id}) }}" onsubmit="return confirm('Are you sure you want to delete this folder?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ folder.id) }}">
    <button title="Delete the folder" class="btn btn-danger icon-trash" role="button" ></button>
</form>